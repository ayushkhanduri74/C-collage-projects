
// simple interst
#include<stdio.h>

int main()
{
	char name[10];
	float a,r,t,si;
	
	printf("Enter Your Name: ");
	scanf("%s",name);
	
	printf("Enter Amount: ");
	scanf("%f",&a);
	printf("Enter Interest Rate: ");
	scanf("%f",&r);
	printf("Enter Time Proide: ");
	scanf("%f",&t);
	
	si = (a*r*t)/100;
	
	printf("Hey ! %s Your Simple Interest \n %f",name,si);

return 0;
}
