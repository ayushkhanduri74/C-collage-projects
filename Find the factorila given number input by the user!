// Find the factorila given number input by the user!

#include<stdio.h>
#include<math.h>

int main ()
{
int fact=1,n;
printf("Enter The Number: ");
scanf("%d",&n);
if(n<0)
{
	printf("Error ! Error ! Factorial Of A Negetive Number Does't Exist..!'");
}
else{
for(int i =1; i<=n; i++)
{
fact = fact*i;
}
printf("Factorial of %d is %d",n,fact);
}
return 0;
}
// iNFiNiT4 
